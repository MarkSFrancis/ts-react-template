{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": [
      "@vitest/browser/matchers",
      "@vitest/browser/providers/playwright"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
